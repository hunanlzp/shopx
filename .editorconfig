# EditorConfig 配置文件
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{java,js,jsx,ts,tsx,json,yml,yaml}]
indent_style = space
indent_size = 2

[*.java]
indent_size = 4
max_line_length = 120

[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

[*.{json,yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{xml,html}]
indent_size = 2

[Makefile]
indent_style = tab

